---
export interface Props {
  type?: 'button' | 'submit'
  disabled?: boolean
  class?: string
  id?: string
}

const {
  type = 'button',
  disabled = false,
  class: className = '',
  ...rest
} = Astro.props

const baseClasses =
  'font-bold rounded transition-colors focus:outline-none bg-neon-orange text-black hover:bg-neon-yellow'

const buttonClasses = [
  baseClasses,
  disabled && 'opacity-50 cursor-not-allowed',
  className,
]
  .filter(Boolean)
  .join(' ')
---

<button type={type} disabled={disabled} class={buttonClasses} {...rest}>
  <slot />
</button>
