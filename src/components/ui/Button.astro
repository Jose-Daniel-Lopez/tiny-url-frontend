---
/**
 * Props for the Button component.
 */
export interface Props {
  /** The type of the button element. Defaults to 'button'. */
  type?: 'button' | 'submit'
  /** Whether the button is disabled. Defaults to false. */
  disabled?: boolean
  /** Additional CSS classes to apply to the button. */
  class?: string
  /** The ID attribute for the button. */
  id?: string
}

const {
  type = 'button',
  disabled = false,
  class: className = '',
  ...rest
} = Astro.props

// Base CSS classes for the button styling
const baseClasses =
  'font-bold rounded transition-colors focus:outline-none bg-neon-orange text-black hover:bg-neon-yellow'

// Construct the final class list by combining base classes, conditional classes, and user-provided classes
const buttonClasses = [
  baseClasses,
  disabled && 'opacity-50 cursor-not-allowed',
  className,
]
  .filter(Boolean)
  .join(' ')
---

<button type={type} disabled={disabled} class={buttonClasses} {...rest}>
  <slot />
</button>
