---
/**
 * Props for the DotLoader component.
 */
interface Props {
  /** Aria label for the loading indicator, used for accessibility. Defaults to 'Loading'. */
  'aria-label'?: string
}

const { 'aria-label': ariaLabel = 'Loading' } = Astro.props
---

<!-- Loading indicator with three dots animation -->
<div
  class="loading"
  role="status"
  aria-live="polite"
  aria-label={ariaLabel}
  aria-atomic="true"
>
  <span class="dot"></span>
  <span class="dot"></span>
  <span class="dot"></span>
  <!-- Screen reader only text for loading state -->
  <span class="sr-only">{ariaLabel}...</span>
</div>
