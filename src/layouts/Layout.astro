---
/**
 * Props for the Layout component.
 */
interface Props {
  /** The title for the HTML document. */
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <!-- Document head with metadata and optimizations -->
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Performance optimizations for external fonts -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload critical resources -->
    <link rel="preload" href="/background.webp" as="image" type="image/webp" />
    <link rel="preload" href="/favicon.svg" as="image" type="image/svg+xml" />

    <!-- SEO meta tags -->
    <meta name="description" content="NeoUrl - Fast and Simple URL Shortener" />
    <meta
      name="keywords"
      content="URL shortener, NeoUrl, link management, short links"
    />
    <!-- Open Graph meta tags for social sharing -->
    <meta
      property="og:title"
      content="NeoUrl - Fast and Simple URL Shortener"
    />
    <meta
      property="og:description"
      content="NeoUrl - Fast and Simple URL Shortener"
    />
    <!-- Provisional image for Open Graph -->
    <meta
      property="og:image"
      content="https://res.cloudinary.com/tejon-tech/image/upload/v1756151699/e-commerce/logo-full.webp"
    />
  </head>
  <!-- Document body -->
  <body>
    <!-- Background element -->
    <div class="background"></div>
    <!-- Main content slot -->
    <slot />
  </body>
</html>
